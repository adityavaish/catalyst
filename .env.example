# Catalyst â€” environment variables
# Copy to .env and fill in your values

# Azure OpenAI (required)
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://az-foundary-alerts.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Alternative providers (uncomment as needed)
# OPENAI_API_KEY=sk-your-key-here
# ANTHROPIC_API_KEY=sk-ant-your-key

# Catalyst settings
CATALYST_LLM_PROVIDER=azure_openai
CATALYST_LLM_MODEL=azure/gpt-4o-mini
CATALYST_PROMPTS_DIR=prompts

# Database (uncomment as needed)
# DATABASE_URL=postgresql://user:pass@localhost:5432/catalyst
# MONGODB_URI=mongodb://localhost:27017
# REDIS_URL=redis://localhost:6379
